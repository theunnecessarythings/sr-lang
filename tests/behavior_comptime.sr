package behavior_comptime

testing :: import "std/testing"
io :: import "std/io"

test "behavior: comptime block" {
    x := 0
    comptime {
        x = 10 // This should modify x at compile time
    }

    if !testing.expect_equal_i64(10, x.(i64)) { return Error.Fail }
}

test "behavior: comptime assertion" {
    comptime {
        io.assert(1 + 1 == 2, "Comptime assertion failed")
        io.print("Comptime assertion OK\n")
    }

    io.print("Runtime after comptime\n")
}

