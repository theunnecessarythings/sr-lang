package behavior_comparison_operators

testing :: import "std/testing"

test "expressions_operators: integer equality" {
    r := 10 == 10
    testing.expect(r, "10 == 10 should be true")!
}

test "expressions_operators: float inequality" {
    r := 10.5 != 10.6
    testing.expect(r, "10.5 != 10.6 should be true")!
}

test "expressions_operators: less than" {
    r := 5 < 10
    testing.expect(r, "5 < 10 should be true")!
}

test "expressions_operators: less than or equal to" {
    r := 10 <= 10
    testing.expect(r, "10 <= 10 should be true")!
}

test "expressions_operators: greater than or equal to" {
    r := 10 >= 10
    testing.expect(r, "10 >= 10 should be true")
}

test "expressions_operators: greater than" {
    r := 5 > -1
    testing.expect(r, "5 > -1 should be true")!
}

