package behavior_literal_patterns

testing :: import "std/testing"

test "patterns: match with integer literal" {
    x := 5
    result := match x {
        1 => "One",
        5 => "Five",
        _ => "Other",
    }

    if !testing.expect_equal_str("Five", result) { return Error.Fail }
}

