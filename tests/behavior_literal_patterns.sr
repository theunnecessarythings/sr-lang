test "patterns: match with boolean literal" {
    b := true
    result := match b {
        true => "It's true",
        false => "It's false",
    }

    if !testing.expect_equal_str("It's true", result) { return Error.Fail }
}

test "patterns: match with character literal" {
    c := 'B'
    result := match c {
        'A' => "Char A",
        'B' => "Char B",
        _ => "Other Char",
    }

    if !testing.expect_equal_str("Char B", result) { return Error.Fail }
}
