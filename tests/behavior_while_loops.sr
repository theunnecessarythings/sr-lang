package behavior_while_loops

testing :: import "std/testing"

test "control_flow: basic while loop" {
    i := 0
    while i < 3 {
        i = i + 1
    }
    if !testing.expect_equal_i64(3, i.(i64)) { return Error.Fail }
}

test "control_flow: while loop with break" {
    i := 0
    while true {
        if i == 2 { break }

        i = i + 1
    }
    if !testing.expect_equal_i64(2, i.(i64)) { return Error.Fail }
}

test "control_flow: while loop with continue" {
    i := 0
    count := 0
    while i < 5 {
        i = i + 1
        if i == 3 { continue }

        count = count + 1
    }
    if !testing.expect_equal_i64(4, count.(i64)) { return Error.Fail }
}

test "control_flow: nested while loops" {
    i := 0
    j := 0
    count := 0
    while i < 2 {
        j = 0
        while j < 2 {
            count = count + 1
            j = j + 1
        }
        i = i + 1
    }
    if !testing.expect_equal_i64(4, count.(i64)) { return Error.Fail }
}
