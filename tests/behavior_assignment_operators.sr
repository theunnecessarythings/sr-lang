package behavior_assignment_operators

testing :: import "std/testing"

test "expressions_operators: simple assignment" {
    x := 10
    y := x + 5
    if !testing.expect_equal_i64(15, y.(i64)) { return Error.Fail }
}

test "expressions_operators: add assignment (integer)" {
    x := 10
    x += 5
    if !testing.expect_equal_i64(15, x.(i64)) { return Error.Fail }
}

test "expressions_operators: subtract assignment (float)" {
    x := 10.5
    x -= 2.0
    if !testing.expect_equal_f64(8.5, x, 0.000001) { return Error.Fail }
}

test "expressions_operators: multiply assignment (integer)" {
    x := 5
    x *= 3
    if !testing.expect_equal_i64(15, x.(i64)) { return Error.Fail }
}

test "expressions_operators: divide assignment (float)" {
    x := 10.0
    x /= 2.5
    if !testing.expect_equal_f64(4.0, x, 0.000001) { return Error.Fail }
}

test "expressions_operators: modulo assignment (integer)" {
    x := 10
    x %= 3
    if !testing.expect_equal_i64(1, x.(i64)) { return Error.Fail }
}

