package array

alloc :: import "std/alloc"

ArrayList :: fn(comptime T: type) type {
    Type :: struct {
        items: []T,
        capacity: usize,
    }

    Type.init :: proc() Type {
        return Type {
            items: alloc.alloc(sizeof(T) * 4).^[]T,
            capacity: 4,
        }
    }
    return Type
}

