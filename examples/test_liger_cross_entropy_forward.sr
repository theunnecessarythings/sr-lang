package main

liger_cross_entropy :: import "vendor/liger_cross_entropy"
triton :: import "vendor/triton"
cuda :: import "vendor/cuda"
io :: import "std/io"
alloc :: import "std/alloc"
math :: import "std/math"

PtrF32 :: triton.Ptr(f32)
PtrI32 :: triton.Ptr(i32)

main :: proc() {
    res := cuda.cuInit(0)
    if res != cuda.SUCCESS {
        io.println("Failed to init CUDA: %d", res)
        return
    }

    dev: cuda.CUdevice = undefined
    res = cuda.cuDeviceGet(&dev, 0)
    if res != cuda.SUCCESS {
        io.println("Failed to get device", ())
        return
    }

    ctx: cuda.CUcontext = null
    res = cuda.cuCtxCreate(&ctx, 0, dev)
    if res != cuda.SUCCESS {
        io.println("Failed to create context", ())
        return
    }

    n_rows: i32 = 4
    n_cols: i32 = 128
    x_stride: i32 = n_cols
    y_stride: i32 = 1
    loss_stride: i32 = 1
    size_x := n_rows.(usize) * n_cols.(usize) * 4
    size_y := n_rows.(usize) * 4

    x_h_ptr := alloc.alloc(size_x) orelse return
    x_h := x_h_ptr.^*f32
    y_h_ptr := alloc.alloc(size_y) orelse return
    y_h := y_h_ptr.^*i32
    loss_h_ptr := alloc.alloc(size_y) orelse return
    loss_h := loss_h_ptr.^*f32

    i: i32 = 0
    total: i32 = n_rows * n_cols
    while i < total {
        x_h[i] = ((i % n_cols) - 64).(f32) * 0.01
        i = i + 1
    }

    i = 0
    while i < n_rows {
        y_h[i] = (i * 7) % n_cols
        i = i + 1
    }

    // CPU reference
    loss_ref_ptr := alloc.alloc(size_y) orelse return
    loss_ref := loss_ref_ptr.^*f32
    r: i32 = 0
    while r < n_rows {
        base := r * n_cols
        maxv := x_h[base]
        c: i32 = 1
        while c < n_cols {
            v := x_h[base + c]
            if v > maxv { maxv = v }
            c = c + 1
        }
        sum_exp: f32 = 0.0
        c = 0
        while c < n_cols {
            sum_exp = sum_exp + math.expf(x_h[base + c] - maxv)
            c = c + 1
        }
        lse := maxv + math.logf(sum_exp)
        x_y := x_h[base + y_h[r]]
        loss_ref[r] = lse - x_y
        r = r + 1
    }

    x_d: cuda.CUdeviceptr = 0
    y_d: cuda.CUdeviceptr = 0
    loss_d: cuda.CUdeviceptr = 0

    _ = cuda.cuMemAlloc(&x_d, size_x)
    _ = cuda.cuMemAlloc(&y_d, size_y)
    _ = cuda.cuMemAlloc(&loss_d, size_y)

    _ = cuda.cuMemcpyHtoD(x_d, x_h.^?*void, size_x)
    _ = cuda.cuMemcpyHtoD(y_d, y_h.^?*void, size_y)

    triton.launch(
        liger_cross_entropy.cross_entropy_forward_kernel,
        grid = (n_rows, 1, 1),
        block = (128, 1, 1),
        BLOCK_SIZE = 128,
        x_d,
        x_stride,
        y_d,
        y_stride,
        loss_d,
        loss_stride,
        n_cols,
    )

    _ = cuda.cuMemcpyDtoH(loss_h.^?*void, loss_d, size_y)

    success := true
    epsilon: f32 = 1.e-3
    i = 0
    while i < n_rows {
        diff := loss_h[i] - loss_ref[i]
        if diff < 0 { diff = -diff }
        if diff > epsilon {
            io.println("loss mismatch at %d: expected %f got %f", i, loss_ref[i], loss_h[i])
            success = false
            break
        }
        i = i + 1
    }
    if success { io.println("Cross-entropy forward verification passed", ()) }

    _ = cuda.cuMemFree(x_d)
    _ = cuda.cuMemFree(y_d)
    _ = cuda.cuMemFree(loss_d)
}
