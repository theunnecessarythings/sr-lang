package main

liger_sparsemax :: import "vendor/liger_sparsemax"
triton :: import "vendor/triton"
cuda :: import "vendor/cuda"
io :: import "std/io"
alloc :: import "std/alloc"
math :: import "std/math"

PtrF32 :: triton.Ptr(f32)

sort_desc_row :: proc(row: *f32, out: *f32, n: i32) {
    i: i32 = 0
    while i < n {
        out[i] = row[i]
        i = i + 1
    }
    i = 0
    while i < n {
        j: i32 = i + 1
        while j < n {
            if out[j] > out[i] {
                tmp := out[i]
                out[i] = out[j]
                out[j] = tmp
            }
            j = j + 1
        }
        i = i + 1
    }
}

main :: proc() {
    res := cuda.cuInit(0)
    if res != cuda.SUCCESS {
        io.println("Failed to init CUDA: %d", res)
        return
    }

    dev: cuda.CUdevice = undefined
    res = cuda.cuDeviceGet(&dev, 0)
    if res != cuda.SUCCESS {
        io.println("Failed to get device", ())
        return
    }

    ctx: cuda.CUcontext = null
    res = cuda.cuCtxCreate(&ctx, 0, dev)
    if res != cuda.SUCCESS {
        io.println("Failed to create context", ())
        return
    }

    n_rows: i32 = 4
    n_cols: i32 = 32
    stride: i32 = n_cols
    size := n_rows.(usize) * n_cols.(usize) * 4

    x_h_ptr := alloc.alloc(size) orelse return
    x_h := x_h_ptr.^*f32
    sorted_h_ptr := alloc.alloc(size) orelse return
    sorted_h := sorted_h_ptr.^*f32
    y_h_ptr := alloc.alloc(size) orelse return
    y_h := y_h_ptr.^*f32

    i: i32 = 0
    total: i32 = n_rows * n_cols
    while i < total {
        x_h[i] = ((i % n_cols) - 16).(f32) * 0.1
        i = i + 1
    }

    r: i32 = 0
    while r < n_rows {
        sort_desc_row(&x_h[r * n_cols], &sorted_h[r * n_cols], n_cols)
        r = r + 1
    }

    // CPU reference
    y_ref_ptr := alloc.alloc(size) orelse return
    y_ref := y_ref_ptr.^*f32
    r = 0
    while r < n_rows {
        base := r * n_cols
        c: i32 = 0
        sum: f32 = 0.0
        k: i32 = 0
        while c < n_cols {
            sum = sum + sorted_h[base + c]
            t := (sum - 1.0.(f32)) / (c + 1).(f32)
            if sorted_h[base + c] > t { k = c + 1 }
            c = c + 1
        }
        sum = 0.0
        c = 0
        while c < k {
            sum = sum + sorted_h[base + c]
            c = c + 1
        }
        tau := (sum - 1.0.(f32)) / k.(f32)
        c = 0
        while c < n_cols {
            v := x_h[base + c] - tau
            y_ref[base + c] = if v > 0 { v } else { 0.0 }
            c = c + 1
        }
        r = r + 1
    }

    x_d: cuda.CUdeviceptr = 0
    sorted_d: cuda.CUdeviceptr = 0
    y_d: cuda.CUdeviceptr = 0

    _ = cuda.cuMemAlloc(&x_d, size)
    _ = cuda.cuMemAlloc(&sorted_d, size)
    _ = cuda.cuMemAlloc(&y_d, size)

    _ = cuda.cuMemcpyHtoD(x_d, x_h.^?*void, size)
    _ = cuda.cuMemcpyHtoD(sorted_d, sorted_h.^?*void, size)

    triton.launch(
        liger_sparsemax.sparsemax_forward_kernel,
        grid = (n_rows, 1, 1),
        block = (128, 1, 1),
        BLOCK_SIZE = 32,
        x_d,
        stride,
        sorted_d,
        stride,
        y_d,
        stride,
        n_cols,
    )

    _ = cuda.cuMemcpyDtoH(y_h.^?*void, y_d, size)

    success := true
    epsilon: f32 = 1.e-3
    i = 0
    while i < total {
        diff := y_h[i] - y_ref[i]
        if diff < 0 { diff = -diff }
        if diff > epsilon {
            io.println("y mismatch at %d: expected %f got %f", i, y_ref[i], y_h[i])
            success = false
            break
        }
        i = i + 1
    }
    if success { io.println("Sparsemax forward verification passed", ()) }

    _ = cuda.cuMemFree(x_d)
    _ = cuda.cuMemFree(sorted_d)
    _ = cuda.cuMemFree(y_d)
}
