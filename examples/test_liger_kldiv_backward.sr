package main

liger_kldiv_backward :: import "vendor/liger_kldiv_backward"
triton :: import "vendor/triton"
cuda :: import "vendor/cuda"
io :: import "std/io"
alloc :: import "std/alloc"

PtrF32 :: triton.Ptr(f32)

main :: proc() {
    res := cuda.cuInit(0)
    if res != cuda.SUCCESS {
        io.println("Failed to init CUDA: %d", res)
        return
    }

    dev: cuda.CUdevice = undefined
    res = cuda.cuDeviceGet(&dev, 0)
    if res != cuda.SUCCESS {
        io.println("Failed to get device", ())
        return
    }

    ctx: cuda.CUcontext = null
    res = cuda.cuCtxCreate(&ctx, 0, dev)
    if res != cuda.SUCCESS {
        io.println("Failed to create context", ())
        return
    }

    n_rows: i32 = 4
    n_cols: i32 = 128
    stride: i32 = n_cols
    size := n_rows.(usize) * n_cols.(usize) * 4

    target_h_ptr := alloc.alloc(size) orelse return
    target_h := target_h_ptr.^*f32
    grads_h_ptr := alloc.alloc(size) orelse return
    grads_h := grads_h_ptr.^*f32

    i: i32 = 0
    total: i32 = n_rows * n_cols
    while i < total {
        target_h[i] = ((i % 17) + 1).(f32) * 0.001
        i = i + 1
    }

    grads_ref_ptr := alloc.alloc(size) orelse return
    grads_ref := grads_ref_ptr.^*f32
    i = 0
    while i < total {
        grads_ref[i] = -target_h[i]
        i = i + 1
    }

    target_d: cuda.CUdeviceptr = 0
    grads_d: cuda.CUdeviceptr = 0

    _ = cuda.cuMemAlloc(&target_d, size)
    _ = cuda.cuMemAlloc(&grads_d, size)

    _ = cuda.cuMemcpyHtoD(target_d, target_h.^?*void, size)

    triton.launch(
        liger_kldiv_backward.kldiv_backward_kernel,
        grid = (n_rows, 1, 1),
        block = (128, 1, 1),
        BLOCK_SIZE = 128,
        target_d,
        stride,
        grads_d,
        stride,
        n_cols,
    )

    _ = cuda.cuMemcpyDtoH(grads_h.^?*void, grads_d, size)

    success := true
    epsilon: f32 = 1.e-6
    i = 0
    while i < total {
        diff := grads_h[i] - grads_ref[i]
        if diff < 0 { diff = -diff }
        if diff > epsilon {
            io.println("grad mismatch at %d: expected %f got %f", i, grads_ref[i], grads_h[i])
            success = false
            break
        }
        i = i + 1
    }
    if success { io.println("KLDiv backward verification passed", ()) }

    _ = cuda.cuMemFree(target_d)
    _ = cuda.cuMemFree(grads_d)
}
