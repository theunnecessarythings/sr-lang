package main

liger_neigh :: import "vendor/liger_fused_neighborhood_attention"
triton :: import "vendor/triton"
cuda :: import "vendor/cuda"
io :: import "std/io"
alloc :: import "std/alloc"
math :: import "std/math"

PtrF32 :: triton.Ptr(f32)

main :: proc() {
    res := cuda.cuInit(0)
    if res != cuda.SUCCESS {
        io.println("Failed to init CUDA: %d", res)
        return
    }

    dev: cuda.CUdevice = undefined
    res = cuda.cuDeviceGet(&dev, 0)
    if res != cuda.SUCCESS {
        io.println("Failed to get device", ())
        return
    }

    ctx: cuda.CUcontext = null
    res = cuda.cuCtxCreate(&ctx, 0, dev)
    if res != cuda.SUCCESS {
        io.println("Failed to create context", ())
        return
    }

    batch: i32 = 1
    num_heads: i32 = 1
    seq_len: i32 = 16
    head_dim: i32 = 8
    scale: f32 = 1.0.(f32) / math.sqrtf(head_dim.(f32))

    grad_attn_stride_seq2: i32 = 1
    grad_attn_stride_seq: i32 = seq_len
    grad_attn_stride_head: i32 = seq_len * seq_len
    grad_attn_stride_batch: i32 = num_heads * grad_attn_stride_head

    k_stride_dim: i32 = 1
    k_stride_seq: i32 = head_dim
    k_stride_head: i32 = seq_len * head_dim
    k_stride_batch: i32 = num_heads * k_stride_head

    grad_q_stride_dim: i32 = 1
    grad_q_stride_seq: i32 = head_dim
    grad_q_stride_head: i32 = seq_len * head_dim
    grad_q_stride_batch: i32 = num_heads * grad_q_stride_head

    grad_attn_size := batch.(usize) * num_heads.(usize) * seq_len.(usize) * seq_len.(usize) * 4
    k_size := batch.(usize) * num_heads.(usize) * seq_len.(usize) * head_dim.(usize) * 4
    grad_q_size := k_size

    grad_attn_h_ptr := alloc.alloc(grad_attn_size) orelse return
    grad_attn_h := grad_attn_h_ptr.^*f32
    k_h_ptr := alloc.alloc(k_size) orelse return
    k_h := k_h_ptr.^*f32
    grad_q_h_ptr := alloc.alloc(grad_q_size) orelse return
    grad_q_h := grad_q_h_ptr.^*f32
    ref_ptr := alloc.alloc(grad_q_size) orelse return
    ref := ref_ptr.^*f32

    i: i32 = 0
    total_grad_attn: i32 = batch * num_heads * seq_len * seq_len
    while i < total_grad_attn {
        grad_attn_h[i] = ((i % 29) - 14).(f32) * 0.01
        i = i + 1
    }

    i = 0
    total_k: i32 = batch * num_heads * seq_len * head_dim
    while i < total_k {
        k_h[i] = ((i % 31) - 15).(f32) * 0.02
        i = i + 1
    }

    // CPU ref: grad_q[b,h,r,d] = sum_k grad_attn[b,h,r,k] * k[b,h,k,d] * scale
    b: i32 = 0
    while b < batch {
        h: i32 = 0
        while h < num_heads {
            r: i32 = 0
            while r < seq_len {
                d: i32 = 0
                while d < head_dim {
                    sum: f32 = 0.0.(f32)
                    k: i32 = 0
                    while k < seq_len {
                        ga_idx := b * grad_attn_stride_batch + h * grad_attn_stride_head + r * grad_attn_stride_seq + k * grad_attn_stride_seq2
                        k_idx := b * k_stride_batch + h * k_stride_head + k * k_stride_seq + d * k_stride_dim
                        sum = sum + grad_attn_h[ga_idx] * k_h[k_idx]
                        k = k + 1
                    }
                    out_idx := b * grad_q_stride_batch + h * grad_q_stride_head + r * grad_q_stride_seq + d * grad_q_stride_dim
                    ref[out_idx] = sum * scale
                    d = d + 1
                }
                r = r + 1
            }
            h = h + 1
        }
        b = b + 1
    }

    grad_attn_d: cuda.CUdeviceptr = 0
    k_d: cuda.CUdeviceptr = 0
    grad_q_d: cuda.CUdeviceptr = 0

    _ = cuda.cuMemAlloc(&grad_attn_d, grad_attn_size)
    _ = cuda.cuMemAlloc(&k_d, k_size)
    _ = cuda.cuMemAlloc(&grad_q_d, grad_q_size)

    _ = cuda.cuMemcpyHtoD(grad_attn_d, grad_attn_h.^?*void, grad_attn_size)
    _ = cuda.cuMemcpyHtoD(k_d, k_h.^?*void, k_size)

    triton.launch(
        liger_neigh.fused_neighborhood_attention_grad_qk_kernel,
        grid = (batch * num_heads, seq_len, head_dim),
        block = (1, 1, 1),
        BLOCK_SIZE = 1,
        grad_attn_d,
        k_d,
        grad_q_d,
        grad_attn_stride_batch,
        grad_attn_stride_head,
        grad_attn_stride_seq,
        grad_attn_stride_seq2,
        k_stride_batch,
        k_stride_head,
        k_stride_seq,
        k_stride_dim,
        grad_q_stride_batch,
        grad_q_stride_head,
        grad_q_stride_seq,
        grad_q_stride_dim,
        num_heads,
        seq_len,
        head_dim,
        scale,
    )

    _ = cuda.cuMemcpyDtoH(grad_q_h.^?*void, grad_q_d, grad_q_size)

    success := true
    epsilon: f32 = 1.e-3
    i = 0
    while i < total_k {
        diff := grad_q_h[i] - ref[i]
        if diff < 0 { diff = -diff }
        if diff > epsilon {
            io.println("grad_q mismatch at %d: expected %f got %f", i, ref[i], grad_q_h[i])
            success = false
            break
        }
        i = i + 1
    }

    if success { io.println("Neighborhood grad QK verification passed", ()) }

    _ = cuda.cuMemFree(grad_attn_d)
    _ = cuda.cuMemFree(k_d)
    _ = cuda.cuMemFree(grad_q_d)
}
